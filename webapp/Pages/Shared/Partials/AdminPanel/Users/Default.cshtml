@model webapp.Pages.AdminModel
<div>
    <form method="post" asp-page-handler="ShowAddUser"><button class="btn btn-primary mb-3">Dodaj użytkownika</button></form>
    <form method="post" asp-page-handler="ShowUsers">
        <select class="form-select mb-3" name="SelectedDepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.SelectedDepartmentId))" onchange="this.form.submit()">
            <option value="">Wszystkie wydziały</option>
        </select>
    </form>
    <table class="table">
        <thead>
        <tr>
            <th>Nazwa użytkownika</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Wydział</th>
            <th>Stopień</th>
            <th>Email</th>
            <th>Typ użytkownika</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@Model.Departments.FirstOrDefault(d => d.Id == Model.AllDegrees.FirstOrDefault(e => e.Id == user.DegreeId)?.DepartmentId)?.Name</td>
                <td>@Model.AllDegrees.FirstOrDefault(e => e.Id == user.DegreeId)?.Name</td>
                <td>@user.Email</td>
                <td>@switch(user.IsAdmin) { 
                        case 0: 
                            <span>Zwykły użytkownik</span> 
                            break; 
                        case 1: 
                            <span>Administrator</span>
                            break;
                        case 2:
                            <span>Inspektor Ochrony Danych</span>
                            break;
                        default:
                            break;
                    }</td>
                <td>
                    <div class="d-flex">
                        <form asp-page-handler="ShowEditUser" asp-route-id="@user.Id"><button class="btn btn-primary btn-sm m-sm-1" onclick="this.form.submit()">Edytuj</button></form>
                        <form asp-page-handler="DeleteUser" asp-route-id="@user.Id"><button class="btn btn-danger btn-sm m-sm-1" onclick="this.form.submit()">Usuń</button></form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-center align-items-center gap-2 my-2">
        @if (Model.PageNumber > 1)
        {
            <form method="post" asp-page-handler="ShowUsers" class="m-0">
                <input type="hidden" name="pageNumber" value="@(Model.PageNumber - 1)" />
                @if (Model.SelectedDepartmentId != null)
                {
                    <input type="hidden" name="SelectedDepartmentId" value="@Model.SelectedDepartmentId" />
                }
                <button type="submit" class="btn btn-outline-primary btn-sm px-2">&lt;</button>
            </form>
        }
        <span class="mx-2">@Model.PageNumber</span>
        @if (!Model.isLastPage)
        {
            <form method="post" asp-page-handler="ShowUsers" class="m-0">
                <input type="hidden" name="pageNumber" value="@(Model.PageNumber + 1)" />
                @if (Model.SelectedDepartmentId != null)
                {
                    <input type="hidden" name="SelectedDepartmentId" value="@Model.SelectedDepartmentId" />
                }
                <button type="submit" class="btn btn-outline-primary btn-sm px-2">&gt;</button>
            </form>
        }
    </div>
</div>